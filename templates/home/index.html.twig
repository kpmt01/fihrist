{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}

<div class="container py-4">
    <ul class="list-group">
        <li class="list-group-item">
            <div class="row">
                <div class="col-3">Ä°sim Soyisim</div>
                <div class="col-2">Telefon</div>
                <div class="col-3">E-Posta</div>
                <div class="col-2">Adres</div>
                <div class="col-2"></div>
            </div>
        </li>
        {% for d in users %}
            <li class="list-group-item{{'ROLE_NONE' not in d.roles ? ' active' : '' }}">
                <div class="row">
                    <div class="col-3">{{ d.name }}</div>
                    <div class="col-2">{{ d.phone }}</div>
                    <div class="col-3"><a href="{{ path('sendmail', {id: d.id}) }}" class="text-success">{{ d.email }}</a></div>
                    <div class="col-2">{{ d.addresses|length }} </div>
                    <div class="col-2">
                        <a class="btn btn-success btn-sm" href="{{ path('getaddresses', {id: d.id}) }}">Detaylar</a>
                    </div>
                </div>
            </li>
        {% endfor %}
    </ul>
</div>
{% endblock %}
